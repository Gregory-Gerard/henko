{
  "preset": "laravel",
  "rules": {
    "concat_space": {
      "spacing": "one"
    },
    "blank_line_before_statement": {
      "statements": [
        "break",
        "case",
        "continue",
        "do",
        "exit",
        "for",
        "foreach",
        "if",
        "phpdoc",
        "return",
        "switch",
        "throw",
        "try",
        "while"
      ]
    },
    "phpdoc_separation": {
      "groups": [
        [
          "param"
        ],
        [
          "throws",
          "return"
        ]
      ]
    },
    "phpdoc_align": {
      "align": "vertical"
    },
    "fully_qualified_strict_types": false,
    "global_namespace_import": true,
    "not_operator_with_space": false,
    "not_operator_with_successor_space": false,
    "phpdoc_var_without_name": false,
    "increment_style": {
      "style": "pre"
    }
  }
}
